doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Kzoom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 Kzoom
        main 
            div#welcome
                form 
                    input#roomName(type="text",required,placeholder="Room Name")
                    input#nickName(type="text",required,placeholder="Your Name")
                    button Enter room
            div#call
                div#streams
                    div#controllers 
                        button#mute Mute 
                        button#camera Turn Camera Off 
                        select#cameras
                    div#myStream
                        video#myFace(autoplay,playsinline,muted,width="400",height="400")
                div#chatRoom
                    ul#chatBox 
                    form#chatForm
                        input(required,type="text",placeholder="Send Message");
                        button Send
        script(src="/socket.io/socket.io.js")
        script(src="/js/app.js")
